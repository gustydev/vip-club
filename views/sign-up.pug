extends layout 

block content 
    div.top
        h1 VIP Club
        ul.top-links 
            li 
                a(href="/") Return to main page 
    h2=title
    form#signup(method="post")
        div.form-field
            label(for="login") #[strong Username*]:   
            input#username(type="text" name='username' placeholder='Username' required min=1 value=(username === undefined ? '' : username))
        div.form-field
            label(for="password") #[strong Password*]: 
            input#password(type="password" name='password' required min=4)
        div.form-field
            label(for="password-confirm") #[strong Confirm password*]: 
            input#passwordConfirm(type='password' name='passwordConfirm' required min=4)
        button(type='submit') Submit 
    if errors 
        p Error:
        ul 
            for error in errors 
                li=error.msg