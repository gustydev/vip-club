extends layout 

block content 
    h1=title
    form(method="post")
        div.form-field
            label(for="login") Username*:   
            input#username(type="text" name='username' required min=1 value=(username === undefined ? '' : username))
        div.form-field
            label(for="password") Password*: 
            input#password(type="password" name='password' required min=4)
        div.form-field
            label(for="password-confirm") Confirm password*: 
            input#passwordConfirm(type='password' name='passwordConfirm' required min=4)
        button(type='submit') Submit 
    if errors 
        p Errors signing up:
        ul 
            for error in errors 
                li=error.msg