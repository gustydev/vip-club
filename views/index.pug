extends layout

block content
  h1= title
  if user
    p Welcome back, #[strong #{user.username}]!
    if user.vip 
      p You are a VIP!
    else 
      p You are not a VIP. Apply for VIP #[a(href='/vip-apply') here].
  else
    p Welcome to the #{title}.
  if user
    a(href='/logout') Log out
  else 
    a(href='/sign-up') Sign up
    br
    a(href='/login') Log in