extends layout 

block content 
    h1=title 
    form(method='post')
        div.form-field
            label(for="username") Username:
            input#username(type="text" name='username' required value=(username ? username : ''))
        div.form-field
            label(for="password") Password: 
            input#password(type='password' name='password' required)    
        button(type='submit') Submit
    if errors 
        p Errors logging in:
        ul 
            for error in errors 
                li=error.msg